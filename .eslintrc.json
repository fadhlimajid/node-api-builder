{
    "extends": "standard",
    "rules": {
        "quotes": [
            2,
            "backtick",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            2,
            "always"
        ],
        "no-new": 0,
        "no-var": 2,
        "prefer-const": 2
    }
}